extends layout

block content

  .mainContainer
    h1 Historial de Vuelos
        if historialVuelo && historialVuelo.length > 0
            table
            thead
                br
                th Destino
                th Vuelo
                th Fecha
            tbody
                each vuelo in historialVuelo
                br
                td= vuelo.destino 
                    td= vuelo.vuelo
                    td= vuelo.fecha 
        else
            p No hay vuelos en el historial

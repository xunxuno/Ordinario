extends layout 

block content

    .mainContainer
        form#multiStepForm
            .slides-container
                .slide.active
                    h2 Selecciona el destino de tu proxima aventura
                    label(for="destino") Destino:
                    br
                    select(id="destino", name="destino", required)  
                        option(value="es") Español
                        option(value="coc") Codigo Cesar
                        option(value="sus") Sustitucion
                        option(value="b64") Base 64
                        option(value="hex") Hexadecimal
                        option(value="bin") Binario
                        br
                    button(type="button" onclick="nextSlide()") Siguiente
                .slide
                    h2 Parte 2
                    label(for="email") Correo Electrónico:
                    input(type="email" id="email" name="email" required)
                    button(type="button" onclick="prevSlide()") Anterior
                    button(type="button" onclick="nextSlide()") Siguiente
                .slide
                    h2 Parte 3
                    label(for="age") Edad:
                    input(type="number" id="age" name="age" required)
                    button(type="button" onclick="prevSlide()") Anterior
                    button(type="submit") Enviar
                script(src="/script.js")
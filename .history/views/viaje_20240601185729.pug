extends layout 

block content

    .mainContainer
        form#multiStepForm
            .slides-container
                .slide.active
                    h2 Selecciona el destino de tu proxima aventura
                    label(for="destino") Destino:
                    br
                    select(id="destino", name="destino", required)  
                        option(value="es") Barcelona, España
                        option(value="coc") Queenstown, Nueva Zelanda
                        option(value="sus") Estambul, Turquía
                        option(value="b64") París, Francia
                        option(value="hex") San Francisco, California
                        option(value="bin") Singapur, China
                        option(value="es") Seúl, Corea del Sur
                        option(value="coc") Kyoto, Japón 
                        option(value="sus") Londres, Inglaterra
                        br
                    button(type="button" onclick="nextSlide()") Reserva tus vuelos!
                .slide
                    h2 Vuelos
                    p Selecciona tu clase de vuelo:
                    label(for="turista") Clase turista
                    input(type="radio" id="turista" name="fly" value="turista" required)
                    br
                    label(for="turistaSuperior") Clase turista superior
                    input(type="radio" id="turistaSuperior" name="fly" value="turistaSuperior" required)
                    br
                    label(for="business") Clase business
                    input(type="radio" id="business" name="fly" value="business" required)
                    br
                    label(for="primeraClase") Primera clase
                    input(type="radio" id="primeraClase" name="fly" value="primeraClase" required)
                    br
                    br
                    label(for="cantidad") Numero de boletos: 
                    input(type="number" id ="cantidad" name="cantidad" required)
                    br
                    br
                    label(for="fecha") Fecha del vuelo: 
                    input(type="date" id="date" name="date" required) 
                    br
                    button(type="button" onclick="prevSlide()") Cambiar Destino
                    button(type="button" onclick="nextSlide()") Reserva tu Hotel!
                .slide
                    h2 Hospedaje
                    p Elije tu Hotel!
                    label(for="hotel1") hotel1
                    input(type="radio" id="hotel1" name="hotel" value="hotel1" required)
                    br
                    label(for="hotel2") hotel2
                    input(type="radio" id="hotel2" name="hotel" value="hotel2" required)
                    br
                    label(for="hotel3") hotel3
                    input(type="radio" id="hotel3" name="hotel" value="hotel3" required)
                    br
                    label(for="hotel4") hotel4
                    input(type="radio" id="hotel4" name="hotel" value="hotel4" required)
                    br
                    button(type="button" onclick="prevSlide()") Anterior
                    button(type="submit") Enviar
                script(src="/script.js")
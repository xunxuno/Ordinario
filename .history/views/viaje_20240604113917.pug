extends layout 

block content
    .mainContainer
        form#multiStepForm(action="/viaje", method="POST")
            .slides-container
                .slide.active
                    h2 Selecciona el destino de 
                    h2 tu proxima aventura
                    label(for="destino") Destino:
                    br
                    select(id="destino", name="destino", required)  
                        option(value="Barcelona") Barcelona, España
                        option(value="Queenstown") Queenstown, Nueva Zelanda
                        option(value="Estambul") Estambul, Turquía
                        option(value="París") París, Francia
                        option(value="San Francisco") San Francisco, California
                        option(value="Singapur") Singapur, Singapur
                        option(value="Seúl") Seúl, Corea del Sur
                        option(value="Kyoto") Kyoto, Japón 
                        option(value="Londres") Londres, Inglaterra
                        br
                    button(type="button" id="nextSlideButton1" class="next-slide") Reserva tus vuelos!
                .slide
                    h2 Vuelos
                    p Selecciona tu clase de vuelo:
                    label(for="turista") Clase turista
                    input(type="radio" id="turista" name="fly" value="turista" required)
                    br
                    label(for="turista Superior") Clase turista superior
                    input(type="radio" id="turista Superior" name="fly" value="turista Superior" required)
                    br
                    label(for="business") Clase business
                    input(type="radio" id="business" name="fly" value="business" required)
                    br
                    label(for="primera Clase") Primera clase
                    input(type="radio" id="primera Clase" name="fly" value="primera Clase" required)
                    br
                    br
                    label(for="cantidad") Numero de boletos: 
                    input(type="number" id ="cantidad" name="cantidad" required)
                    br
                    label(for="preciofly") Precio
                    span#flightPrice MXN
                    br
                    br
                    label(for="fecha") Fecha del vuelo: 
                    input(type="date" id="date" name="date" required) 
                    br
                    button(type="button" id="prevSlideButton1" onclick="prevSlide()") Cambiar Destino
                    button(type="button" id="nextSlideButton2" class="next-slide") Reserva tu Hotel!
                .slide
                    h2 Hospedaje
                    p Elije tu Hotel!
                    div#hotelesContainer
                    label(for="noches") Noches de Hospedaje 
                    input(type="number" id="noches" name="noches" required)
                    br
                    label(for="preciohotel") Precio
                    span#hotelPrice
                    br
                    button(type="button" id="prevSlideButton2" onclick="prevSlide()") Anterior
                    button(type="submit" id="submitButton") Enviar
                script(src="/script.js")
